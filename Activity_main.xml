<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DAFAFC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context="com.example.konversimatauang.MainActivity">


    <ImageView
        android:layout_width="202dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo" />

    <LinearLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/uang_input"
            android:textSize="20sp"
            android:hint="@string/_0_rupiah"

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:font="Bookman Old Style"
            android:textColor="#000000"
            android:text="="
            android:textSize="20sp"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:font="Bookman Old Style"
            android:id="@+id/hasil_konversi"
            android:text="@string/hasil_konversi"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>


    <Button
        android:layout_width="270dp"
        android:font="cardo"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="@string/rp_usd"
        android:textSize="20sp"
        android:textColor="#000000"
        android:backgroundTint="#4FBFE7"
        android:onClick="toUSD"
        android:id="@+id/rpusd"/>

    <Button
        android:layout_width="270dp"
        android:font="cardo"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="@string/rp_yen"
        android:textColor="#000000"
        android:backgroundTint="#4FBFE7"
        android:onClick="toYEN"
        android:id="@+id/rpyen"/>

    <Button
        android:layout_width="270dp"
        android:font="cardo"
        android:textColor="#000000"
        android:backgroundTint="#4FBFE7"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="@string/rp_euro"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpeuro"/>
</LinearLayout>
